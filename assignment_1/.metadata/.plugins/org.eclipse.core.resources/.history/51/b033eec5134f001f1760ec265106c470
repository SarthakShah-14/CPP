#include<iostream>
#include<stdlib.h>
using namespace std;
#define n 5
int arr[n];
class men
{
  int i,temp,j;
  public:
  void insert_m()
  {
printf("Enter your elements");
  for(i=0;i<n;i++)
  {
    cin>>arr[i];
  }
  }
  void display()
  {
    for(i=0;i<n;i++)
  {
    cout<<arr[i]<<" ";
  }
  }
  void bubble_sort()
  {
    for(i=0;i<n-1;i++)
    {
      for(j=0;j<n-1-i;j++)
      {
        if(arr[j]>arr[j+1])
        {
          temp=arr[j];
          arr[j]=arr[j+1];
          arr[j+1]=temp;
        }
      }
    }
  }
  void insertion_sort()
  {
	  int temp;
    for(i=1;i<n;i++)
    {
      temp=arr[i];
      j=i-1;
      while(j>=0 && arr[j]>temp)
      {
        arr[j+1]=arr[j];
        j--;
      }
      arr[j + 1] = temp;
    }
  }
    void selection_sort() {
        for ( i = 0; i < n - 1; i++) {
            int minIndex = i;
            for ( j = i + 1; j < n; j++) {
                if (arr[j] < arr[minIndex]) {
                    minIndex = j;
                }
            }
            // Swap the found minimum element with the first element of the unsorted portion
             temp = arr[minIndex];
            arr[minIndex] = arr[i];
            arr[i] = temp;
        }
    }

}bi;
int main()
{

   int c;
   do{
   cout<<"1.insert:\n";
   cout<<"2.display:\n";
   cout<<"3.bubble sort\n";
   cout<<"4.insertion sort\n";
   cout<<"5.selection sort\n";
   cout<<"6.exit\n";
   cout<<"choose the choice:\n";
   cin>>c;
   switch(c)
   {
    case 1:
    bi.insert_m();
    break;
    case 2:
    bi.display();
    break;
    case 3:
    bi.bubble_sort();
    bi.display();
    break;
    case 4:
    bi.insertion_sort();
    bi.display();
    break;
    case 5:
    bi.selection_sort();
    bi.display();
    break;
    case 6:
    cout<<"exiting...";
    return 0;
    default:
    cout<<"Please enter proper choice";
   }
   cout<<"\nenter the number (1 yes||0 no):";
   cin>>c;
   }while(c==1);
   return 0;
}


