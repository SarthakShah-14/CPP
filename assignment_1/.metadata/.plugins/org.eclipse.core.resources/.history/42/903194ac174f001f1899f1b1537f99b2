#include<iostream>
#include<stdlib.h>
using namespace std;
#define n 5
int arr[n];
class searching
{
  int i,temp,j;
  public:
  void insert()
  {
printf("Enter your array elements:\n");
  for(i=0;i<n;i++)
  {
	 cout<<"arr["<<i+1<<"]";
    cin>>arr[i];
  }
  }
  void display()
  {
    for(i=0;i<n;i++)
  {
    cout<<arr[i]<<" ";
  }
  }
  void bubble_sort()
  {
//    for(i=0;i<n-1;i++)
//    {
//      for(j=0;j<n-1-i;j++)
//      {
//        if(arr[j]>arr[j+1])
//        {
//          temp=arr[j];
//          arr[j]=arr[j+1];
//          arr[j+1]=temp;
//        }
//      }
//    }
	  for(int i=0;i<n-1;i++) {
	              for(int j=0;j<n-i-1;j++) {
	                  if(arr[j]>arr[j+1]) {
	                      int tmp = arr[j];
	                      arr[j] = arr[j+1];
	                      arr[j+1] = tmp;
	                  }
	              }
	          }
	      }

  void insertion_sort()
  {
	  int temp;
    for(i=1;i<n;i++)
    {
      temp=arr[i];
      j=i-1;
      while(j>=0 && arr[j]>temp)
      {
        arr[j+1]=arr[j];
        j--;
      }
      arr[j + 1] = temp;
    }
  }
    void selection_sort() {
//        for ( i = 0; i < n - 1; i++) {
//            int minIndex = i;
//            for ( j = i + 1; j < n; j++) {
//                if (arr[j] < arr[minIndex]) {
//                    minIndex = j;
//                }
//            }
//            // Swap the found minimum element with the first element of the unsorted portion
//             temp = arr[minIndex];
//            arr[minIndex] = arr[i];
//            arr[i] = temp;
//        }
    	for(int i=0;i<n;i++) {
    	            for(int j=i+1;j<n;j++) {
    	                if(arr[i] > arr[j]) {
    	                    int temp = arr[j];
    	                    arr[j] = arr[i];
    	                    arr[i] = temp;
    	                }
    	            }
    	        }
    	    }


}s;
int main()
{

   int c;
   do{
   cout<<"1.insert:\n";
   cout<<"2.display:\n";
   cout<<"3.bubble sort\n";
   cout<<"4.insertion sort\n";
   cout<<"5.selection sort\n";
   cout<<"6.exit\n";
   cout<<"choose the choice:\n";
   cin>>c;
   switch(c)
   {
    case 1:
    s.insert();
    break;
    case 2:
    s.display();
    break;
    case 3:
    s.bubble_sort();
    s.display();
    break;
    case 4:
    s.insertion_sort();
    s.display();
    break;
    case 5:
    s.selection_sort();
    s.display();
    break;
    case 6:
    cout<<"exiting...";
    return 0;
    default:
    cout<<"Please enter proper choice";
   }
   cout<<"\nenter the number (1 yes||0 no):";
   cin>>c;
   }while(c==1);
   return 0;
}


